<Window x:Class="SchoolHealthWPF.NursePages.HealthCheckHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolHealthWPF.NursePages"
        mc:Ignorable="d"
        Title="Lịch sử kiểm tra sức khỏe"
        Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Width="300" Height="30" Margin="0,0,0,10">
            <TextBox x:Name="txtSearch"
             VerticalContentAlignment="Center"
             Padding="5"
             TextChanged="txtSearch_TextChanged"/>

            <TextBlock x:Name="txtPlaceholder"
               Foreground="Gray"
               Margin="8,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"
               Visibility="Visible"/>
        </Grid>

        <DataGrid x:Name="dgHealthChecks"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Học sinh" Binding="{Binding StudentName}" Width="200"/>
                <DataGridTextColumn Header="Ngày kiểm tra" Binding="{Binding Date, StringFormat=\{0:dd/MM/yyyy\}}" Width="150"/>
                <DataGridTextColumn Header="Kết quả" Binding="{Binding Result}" Width="300"/>
                <DataGridTextColumn Header="Ghi chú bác sĩ" Binding="{Binding DoctorNotes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
