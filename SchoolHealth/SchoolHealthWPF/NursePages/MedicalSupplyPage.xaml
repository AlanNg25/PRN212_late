<Window x:Class="SchoolHealthWPF.NursePages.MedicalSupplyPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolHealthWPF.NursePages"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MedicalSupplyPage" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Content="Làm mới" Click="Refresh_Click" Margin="0,0,0,10"/>

        <DataGrid x:Name="dgSupplies"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding SupplyId}" Width="50"/>
                <DataGridTextColumn Header="Tên thuốc" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Hạn sử dụng" Binding="{Binding ExpirationDate}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button Content="Nhập kho" Click="Import_Click" Margin="0,0,10,0"/>
            <Button Content="Xuất kho" Click="Export_Click"/>
        </StackPanel>
    </Grid>
</Window>
