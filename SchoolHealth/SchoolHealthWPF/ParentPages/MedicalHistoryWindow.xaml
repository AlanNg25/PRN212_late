<Window x:Class="SchoolHealthWPF.ParentPages.MedicalHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolHealthWPF.ParentPages"
        mc:Ignorable="d"
        Title="MedicalHistoryWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Lịch sử kiểm tra sức khỏe"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="#2c3e50"/>

        <!-- DataGrid -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="10"
                BorderBrush="#dcdcdc"
                BorderThickness="1"
                >
            <DataGrid x:Name="dgMedicalHistory"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      RowHeight="35"
                      FontSize="14"
                      ColumnHeaderHeight="40">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ngày" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="120"/>
                    <DataGridTextColumn Header="Kết quả" Binding="{Binding Result}" Width="*"/>
                    <DataGridTextColumn Header="Ghi chú bác sĩ" Binding="{Binding DoctorNotes}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
