<Window x:Class="SchoolHealthWPF.ParentPages.ParentHealthCheckHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolHealthWPF.ParentPages"
        mc:Ignorable="d"
        Title="Lịch sử kiểm tra sức khỏe của con"
        Height="500" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="cbStudents" Width="250" Height="30" Margin="0,0,0,10"
                  DisplayMemberPath="FullName"
                  SelectedValuePath="StudentId"
                  SelectionChanged="cbStudents_SelectionChanged"/>

        <DataGrid x:Name="dgHealthChecks"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ngày kiểm tra" Binding="{Binding Date, StringFormat=\{0:dd/MM/yyyy\}}" Width="150"/>
                <DataGridTextColumn Header="Kết quả" Binding="{Binding Result}" Width="300"/>
                <DataGridTextColumn Header="Ghi chú bác sĩ" Binding="{Binding DoctorNotes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
