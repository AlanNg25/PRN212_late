<Window x:Class="SchoolHealthWPF.HealthRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Health Record Entry" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Border CornerRadius="10" Background="#F5F5F5" Padding="20" BorderBrush="#CCCCCC" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Health Record Form" FontSize="20" FontWeight="Bold" Foreground="#2E86C1" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Student Name:" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="StudentComboBox"
          Grid.Column="1"
          Margin="5,0"
          DisplayMemberPath="FullName"
          SelectedValuePath="StudentId"
          SelectedIndex="-1"/>

                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Allergies:" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="AllergiesBox" Grid.Column="1" Margin="5,0"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Chronic Diseases:" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="ChronicDiseasesBox" Grid.Column="1" Margin="5,0"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Vaccination History:" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="VaccinationHistoryBox" Grid.Column="1" Margin="5,0"/>
                </Grid>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Vision:" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="VisionBox" Grid.Column="1" Margin="5,0"/>
                </Grid>
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Hearing:" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="HearingBox" Grid.Column="1" Margin="5,0"/>
                </Grid>

                <Button Content="Submit" Click="Submit_Click" Height="35" Background="#2E86C1" Foreground="White"
                        FontWeight="Bold" BorderBrush="#1B4F72" BorderThickness="1"
                        HorizontalAlignment="Right" Width="100" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
