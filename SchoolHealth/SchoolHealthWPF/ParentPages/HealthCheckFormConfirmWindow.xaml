<Window x:Class="SchoolHealthWPF.ParentPages.HealthCheckFormConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolHealthWPF.ParentPages"
        mc:Ignorable="d"
        Title="HealthCheckFormConfirmWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Danh sách Phiếu Khám Sức Khỏe chưa xác nhận"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0 0 0 10"/>

        <!-- Bảng danh sách -->
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="#D0D0D0" CornerRadius="8" Background="White" Padding="5">
            <DataGrid x:Name="dgForms"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      RowBackground="#FFFFFF"
                      AlternatingRowBackground="#F5F5F5"
                      SelectionMode="Extended"
                      SelectionUnit="FullRow"
                      GridLinesVisibility="Horizontal"
                      BorderThickness="0"
                      Margin="0"
                      ColumnHeaderHeight="30"
                      FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã Phiếu" Binding="{Binding FormId}" Width="100"/>
                    <DataGridTextColumn Header="Học sinh" Binding="{Binding Student.FullName}" Width="200"/>
                    <DataGridTextColumn Header="Ngày gửi" Binding="{Binding SentDate, StringFormat=dd/MM/yyyy}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Nút xác nhận -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 15 0 0">
            <Button Content="Xác nhận đã chọn"
                    Width="160"
                    Height="35"
                    Margin="5"
                    Background="#27AE60"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderBrush="{x:Null}"
                    Cursor="Hand"
                    Click="BtnConfirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
