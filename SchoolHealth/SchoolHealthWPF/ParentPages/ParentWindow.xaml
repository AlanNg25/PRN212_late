<Window x:Class="SchoolHealthWPF.ParentPages.ParentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolHealthWPF.ParentPages"
        mc:Ignorable="d"
        Title="Trang phụ huynh"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="WhiteSmoke" Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Xin chào, phụ huynh!" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <Button Content="Xem lịch sử kiểm tra sức khỏe của con"
                    Width="250" Height="40"
                    Click="ViewHealthHistory_Click"
                    Style="{StaticResource PrimaryButtonStyle}" />

            <Button Content="Đăng xuất" Width="100" Height="30" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>
