<Window x:Class="SchoolHealthWPF.ParentPages.ParentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Parent Dashboard"
        Height="380" Width="500"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        Background="#F8F9FA">
    <Grid>
        <Border Background="White" Padding="20" CornerRadius="10" 
                BorderBrush="#D6D6D6" BorderThickness="1" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="280">
            <StackPanel>
                <Button x:Name="btnHome"
                        Content="⬅️ Home"
                        Height="35"
                        Background="Transparent"
                        Foreground="#2980B9"
                        FontWeight="SemiBold"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,10" Click="btnHome_Click"/>

                <TextBlock Text="Parent Dashboard" 
                           FontSize="10" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <!-- New from branch addHealth -->
                           <Button Content="Xem lịch sử kiểm tra sức khỏe của con"
                    Width="250" Height="40"
                    Click="ViewHealthHistory_Click"
                    Style="{StaticResource PrimaryButtonStyle}" />

                <Button x:Name="btnHealthRecord"
                        Content=" Hồ sơ sức khỏe"
                        Click="btnHealthRecord_Click"
                        Height="45"
                        Background="#3498DB"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,0,10"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button x:Name="btnSendMedicine"
                        Content=" Gửi thuốc"
                        Click="btnSendMedicine_Click"
                        Height="45"
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,0,8"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button x:Name="btnConfirm"
                        Content=" Xác nhận"
                        Click="btnConfirm_Click"
                        Height="45"
                        Background="#E67E22"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,0,8"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button x:Name="btnMedicalHistory"
        Content=" Lịch sử khám bệnh"
        Click="btnMedicalHistory_Click"
        Height="45"
        Background="#9B59B6"
        Foreground="White"
        FontWeight="Bold"
        BorderThickness="0"
        Cursor="Hand"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
