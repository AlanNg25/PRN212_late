<Window x:Class="SchoolHealthWPF.AdminPages.BlogDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolHealthWPF.AdminPages"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="Blog Edit" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Border CornerRadius="10" Background="#F5F5F5" Padding="20" BorderBrush="#CCCCCC" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Blog Edit Form" FontSize="20" FontWeight="Bold" Foreground="#2E86C1" 
                           Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Title:" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="TitleBox" Grid.Column="1" Margin="5,0"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Content:" Grid.Column="0" VerticalAlignment="Top"/>
                    <TextBox x:Name="ContentBox" Grid.Column="1" Margin="5,0" 
                             AcceptsReturn="True" AcceptsTab="True" Height="100" 
                             VerticalScrollBarVisibility="Auto"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Date Posted:" Grid.Column="0" VerticalAlignment="Center"/>
                    <DatePicker x:Name="DatePostedPicker" Grid.Column="1" Margin="5,0"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Author:" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="AuthorComboBox" Grid.Column="1" Margin="5,0"
                              DisplayMemberPath="FullName" SelectedValuePath="UserId"
                              SelectedIndex="-1"/>
                </Grid>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Type:" Grid.Column="0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="TypeComboBox" Grid.Column="1" Margin="5,0" SelectedIndex="-1"/>
                </Grid>

                <Button Content="Submit" Click="Submit_Click" Height="35" Background="#2E86C1" 
                        Foreground="White" FontWeight="Bold" BorderBrush="#1B4F72" 
                        BorderThickness="1" HorizontalAlignment="Right" Width="100" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
