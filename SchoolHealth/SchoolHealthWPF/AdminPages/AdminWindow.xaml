<Window x:Class="SchoolHealthWPF.AdminPages.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolHealthWPF.AdminPages"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Title="Admin Window" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="{StaticResource AccentBrush}">
            <StackPanel Margin="0,10,0,30">
                <Label x:Name="userName" Content="username"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Style="{StaticResource Title_1}"/>
                <TextBlock x:Name="roletxt" Text="Admin/Manager" 
                           Padding="4"
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
            </StackPanel>


            <Button Style="{StaticResource PrimaryButtonStyle}" 
                    Content="Home" x:Name="btnHome" Click="btnHome_Click"
                    />
            <Button Style="{StaticResource PrimaryButtonStyle}" 
                    Content="Dashboard" x:Name="btnDashboard" Click="btnDashboard_Click"
                    />
            <Button Style="{StaticResource PrimaryButtonStyle}"
                    Content="Quản lý người dùng" x:Name="btnUserManage" Click="btnUserManage_Click"/>
            <Button Style="{StaticResource PrimaryButtonStyle}"
                    Content="Quản lý Blog" x:Name="btnBlogManage" Click="btnBlogManage_Click"/>

            <Button Style="{StaticResource PrimaryButtonStyle}" Background="DarkGray"
                    Content="Log Out" x:Name="btnLogout" Click="btnLogOut_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <ContentControl x:Name="mainContent"/>
        </StackPanel>

    </Grid>
</Window>
