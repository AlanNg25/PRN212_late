<Window x:Class="SchoolHealthWPF.AdminPages.UserManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="User Management" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- User List -->
        <DataGrid x:Name="UserDataGrid"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding AccountId}" Width="60"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- User Actions -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add User" Margin="0,0,10,0" Click="AddUser_Click"/>
            <Button Content="Edit User" Margin="0,0,10,0" Click="EditUser_Click"/>
            <Button Content="Delete User" Click="DeleteUser_Click"/>
        </StackPanel>
    </Grid>
</Window>
