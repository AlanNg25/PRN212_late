<Window x:Class="SchoolHealthWPF.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolHealthWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Title="HomeWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>

        <!--Header-->
        <Grid x:Name="NavBlock" Grid.Row="0" 
              Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        Grid.Column="0">
                <Button Style="{StaticResource PrimaryButtonStyle}" 
                        Content="Home" x:Name="btnHome" Click="btnHome_Click"
                        />
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Grid.Column="1">
                <Label x:Name="welcomeMsg" Content="Chào mừng" FontWeight="Bold" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" 
                        HorizontalAlignment="Right"
                        Grid.Column="2"
                        >
                <Button Style="{StaticResource PrimaryButtonStyle}" 
                        Content="Dashboard" x:Name="btnDashboard" Click="btnDashboard_Click" />
                <Button Style="{StaticResource PrimaryButtonStyle}" 
                        Content="Login" x:Name="btnLogin" Click="btnLogin_Click" />
                <Button Style="{StaticResource PrimaryButtonStyle}"
                        Content="Logout" x:Name="btnLogout" Click="btnLogOut_Click" />
            </StackPanel>
        </Grid>

        <!--CONTENT-->
        <ScrollViewer Grid.Row="1" Grid.Column="1"
                      HorizontalAlignment="Center"
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="maincontentContainer" >

                <!-- Phần 1: Giới thiệu -->
                <Label Content="About Us" Style="{StaticResource Title_1}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Margin="0,0,5,0" Grid.Column="0">
                        <Image Width="300" Height="Auto" Stretch="Fill"
                               Source="/truong-fpt.png" Cursor="No" Opacity="0.55" >
                            <Image.Effect>
                                <BlurEffect/>
                            </Image.Effect>
                        </Image>
                        <TextBlock Text="FPT University" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   FontSize="36" Cursor="No" Foreground="#FFFF2E00" 
                                   IsEnabled="False" >
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="10" Color="White"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>

                    <UniformGrid Grid.Column="1" Columns="2"
                                 VerticalAlignment="Center" >
                        <UniformGrid Rows="2" VerticalAlignment="Center">
                            <StackPanel Margin="0,0,5,0">
                                <Label Content="Sứ mệnh" Padding="0,5,0,10"
                                       FontWeight="DemiBold" FontSize="14"/>
                                <TextBlock Text="Cung cấp năng lực cạnh tranh toàn cầu cho đông đảo người học, góp phần mở mang bờ cõi trí tuệ đất nước"
                                               TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,5,0">
                                <Label Content="Tầm nhìn " Padding="0,5,0,10"
                                       FontWeight="DemiBold" FontSize="14"/>
                                <TextBlock Text="Tầm nhìn được thể hiện trong từ khoá iGSM – [Industry Relevant – Global – Smart Education – Mega]. Trở thành một hệ thống giáo dục Mega mang tính quốc tế, đáp ứng nhu cầu xã hội và dựa trên các công nghệ đào tạo tiên tiến nhất"  
                                               TextWrapping="Wrap"/>
                            </StackPanel>
                        </UniformGrid>

                        <UniformGrid Rows="2">
                            <StackPanel Margin="0,0,5,0">
                                <Label Content="Triết lí giáo dục " Padding="0,5,0,10"
                                       FontWeight="DemiBold" FontSize="14"/>
                                <TextBlock Text="Giáo dục đào tạo là tổ chức và quản trị việc tự học của người học"
                                               TextWrapping="Wrap"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,5,0">
                                <Label Content="Văn hóa " Padding="0,5,0,10"
                                       HorizontalAlignment="Left"
                                       FontWeight="DemiBold" FontSize="14"/>
                                <TextBlock Text="Tôn đổi đồng chí gương sáng
                                           Học thật, thi thật, thành công thật
                                           Làm khác để làm tốt"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </UniformGrid>
                    </UniformGrid>

                </Grid>

                <!-- Phần 2: Blog -->
                <StackPanel>
                    <Label Content="Blog" Style="{StaticResource Title_1}"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
                        <ItemsControl x:Name="itemCntrolBlog">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="LightBlue" Width="200" Height="200" Margin="5">
                                        <StackPanel Margin="5">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding DatePosted}" FontStyle="Italic" FontSize="10"/>
                                            <TextBlock Text="{Binding Author.Username}" />
                                            <TextBlock Text="{Binding TypeText}" />
                                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="11"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </ScrollViewer>
                </StackPanel>

                <!-- Phần 3: Bài viết -->
                <StackPanel>
                    <Label Content="Medical" Style="{StaticResource Title_1}"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
                        <ItemsControl x:Name="itemCntrolBlogMedical">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="LightBlue" Width="200" Height="200" Margin="5">
                                        <StackPanel Margin="5">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding DatePosted}" FontStyle="Italic" FontSize="10"/>
                                            <TextBlock Text="{Binding Author.Username}" />
                                            <TextBlock Text="{Binding TypeText}" />
                                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="11"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
